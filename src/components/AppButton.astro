---
const BUTTON_STYLES_GENERAL = 'tracking-widest block'

const BUTTON_STYLES = {
  'outline': "px-16 py-3 border border-white",
  'success': "px-16 py-3 bg-[#28E48E] text-white shadow",
} as const

type ButtonStyle = keyof typeof BUTTON_STYLES

interface Props {
  buttonStyle: ButtonStyle
  class?: string
}

const { buttonStyle, class: additionalClass = '' } = Astro.props
const buttonClass = [BUTTON_STYLES_GENERAL, BUTTON_STYLES[buttonStyle], additionalClass].join(' ')
---

<button class={buttonClass}>
  <slot/>
</button>